@inherits LayoutComponentBase

<MdcDrawer @ref="@sidebar">
    <div class="mdc-list">
        <MdcNavLink Href="" Icon="home" Text="Home" Match=NavLinkMatch.All />
        <MdcNavLink Href="todos/" Icon="touch_app" Text="Todo Pages" />
    </div>
</MdcDrawer>

<div class="mdc-drawer-app-content">
    <MdcTopAppBar Title="Blazing Todos" OnNavClicked="@(() => sidebar.Toggle())" ScrollTarget="#main-content">
        <span class="mdc-top-app-bar-content">
            <LoginDisplay/>
        </span>
    </MdcTopAppBar>

    <main class="main-content" id="main-content">
        <div class="mdc-top-app-bar--fixed-adjust">
            <div class="mdc-card main-content-card">
                @Body
            </div>
        </div>
    </main>
</div>

@functions {
    MdcDrawer sidebar;
}
